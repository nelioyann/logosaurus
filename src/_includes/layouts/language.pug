doctype html
html(lang="en")
    include ../partials/head.pug
    body
        include ../partials/header.pug
        main
            h2 !{title}
            p Click on the card to see the meaning
            ul.cards
                for word in words[language]
                    li.card(data-target=word[target])
                        .front 
                            span #{word[source]}
                        .back 
                            span #{word[target]}
        script(src="/scripts/script.js") 
        script(src="/scripts/observer.js") 
        script(src="/scripts/speech.js") 
        include ../partials/footer.pug
